<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Korex Logistics</title>
    <!-- base:css -->
    <link rel="stylesheet" href="../../font/typicons.css">
    <link rel="stylesheet" href="../../css/vendor.bundle.base.css">
    <link rel="stylesheet" href="../../vertical-layout-light/style.css">
    <!-- endinject -->
    <link rel="icon" href="../../img/favi.jpg">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/4.1.2/socket.io.js"></script>
  </head>
  <body>
    <div class="container-scroller">
   
        <%- include ('../partials/adminNav'); -%>
    
      <!-- partial -->
      <div class="container-fluid page-body-wrapper">
        <!-- partial:partials/_settings-panel.html -->
        <div class="theme-setting-wrapper">
          <div id="settings-trigger"><i class="typcn typcn-cog-outline"></i></div>
          <div id="theme-settings" class="settings-panel">
            <i class="settings-close typcn typcn-delete-outline"></i>
            <p class="settings-heading">SIDEBAR SKINS</p>
            <div class="sidebar-bg-options" id="sidebar-light-theme">
              <div class="img-ss rounded-circle bg-light border mr-3"></div>
              Light
            </div>
            <div class="sidebar-bg-options selected" id="sidebar-dark-theme">
              <div class="img-ss rounded-circle bg-dark border mr-3"></div>
              Dark
            </div>
            <p class="settings-heading mt-2">HEADER SKINS</p>
            <div class="color-tiles mx-0 px-4">
              <div class="tiles success"></div>
              <div class="tiles warning"></div>
              <div class="tiles danger"></div>
              <div class="tiles primary"></div>
              <div class="tiles info"></div>
              <div class="tiles dark"></div>
              <div class="tiles default border"></div>
            </div>
          </div>
        </div>
        <!-- partial -->
        <!-- partial:partials/_sidebar.html -->
        <%- include('../partials/adminSidebar'); -%>

        <!-- partial -->
        <div class="main-panel">
          <div class="content-wrapper">

              
                <%- include (`../partials/messages`); -%>

                <div class="col-12 grid-margin stretch-card">
                    <div class="card">
                      <div class="card-body">
                        <h4 class="card-title">Customer Form</h4>
                        <p class="card-description">
                          Edit Customer Information
                        </p>
                       
                        <form class="form-sample" action="/admin/editUserProfilePost/<%- editMyUser._id %>" method="post" enctype="multipart/form-data">

                            <div class="form-group">
                              <label for="exampleInputName1">Name</label>
                              <input type="text" class="form-control" name="senderName"
                                value="<%- editMyUser.senderName %>" />
                            </div>

                            <div class="form-group">
                                <label for="exampleInputCity1">Gender</label>
                                <% let selectGender=["Male", "Female"] %>
                                    <select class="form-control form-control-lg" name="senderGender">
                                      <% selectGender.forEach((senderGender)=> { %>
                                          <option value="<%- senderGender %>"
                                            <% if (editMyUser.senderGender===senderGender) { %> selected<% } %>> <%- senderGender%>
                                          </option>
                                      <% }) %>
                                    </select>
                            </div>
    
                            <div class="form-group">
                              <label for="exampleInputEmail3">Date Of Birth</label>
                              <input class="form-control"  type="date" name="senderDob" value="<%- editMyUser.senderDob %>" />
                            </div>
    
                            <div class="form-group">
                              <label for="exampleInputEmail3">Phone Number</label>
                              <input class="form-control"  type="text" name="senderNumber" 
                              value="<%- editMyUser.senderNumber %>" />
                            </div>
    
                            <div class="form-group">
                                <label for="exampleInputCity1">Membership</label>
                                <% let selectMembership=["Individual", "Business"] %>
                                  <select class="form-control form-control-lg" name="selectMembership" >
                                     <% selectMembership.forEach((selectMembership)=> { %>
                                          <option value="<%- selectMembership %>" 
                                              <% if (editMyUser.selectMembership===selectMembership) { %> selected<% }  %>>
                                             <%- selectMembership %>
                                          </option>
                                      <% }) %>
                                    </select>
                            </div>
    
                            <div class="form-group">
                              <label for="exampleInputCity1">Email Address</label>
                              <input class="form-control"  type="email" name="senderEmail"
                               value="<%- editMyUser.senderEmail %>" />
                            </div>
    
                            <div class="form-group">
                              <label for="exampleInputCity1">Username</label>
                              <input class="form-control"  type="text" name="username"  
                              value="<%- editMyUser.username %>" />
                            </div>
    
                            <div class="form-group">
                              <label for="exampleInputCity1">Password</label>
                              <input class="form-control"  type="password" name="password" 
                              value="<%- editMyUser.password %>" />
                            </div>
    
                            <div class="form-group">
                              <label for="exampleInputCity1">Home Address</label>
                              <input type="text" class="form-control" name="senderAddress" 
                              value="<%- editMyUser.senderAddress %>" />
                            </div>
    
                            <div class="form-group">
                              <label for="exampleInputCity1">City</label>
                              <input type="text" class="form-control" name="senderCity" 
                              value="<%- editMyUser.senderCity%>" />
                            </div>
    
                            <div class="form-group">
                              <label for="exampleInputCity1">State</label>
                              <input type="text" class="form-control" name="senderState"
                               value="<%- editMyUser.senderState %>" />
                            </div>
    
                            <div class="form-group">
                              <label for="exampleInputCity1">PostCode</label>
                              <input type="text" class="form-control" name="postCode" 
                              value="<%- editMyUser.postCode %>" />
                            </div>
    
                            <div class="form-group">
                                <label for="exampleInputCity1">Country</label>
                                <% let Country=["Nigeria"] %>
                                  <select class="form-control form-control-lg" name="country" >
                                      <% Country.forEach((country)=> { %>
                                          <option value="<%- country %>" 
                                              <% if (editMyUser.country===country) { %> selected<% }  %>>
                                             <%- country %>
                                          </option>
                                      <% }) %>
                                    </select>
                            </div>
    
    
                            <div class="form-group">
                              <label for="exampleInputCity1">Upload Doctor Image</label>
                              <input type="file" class="form-control" name="image" accept="image/*" />
                            </div>
                            <input type="hidden" name="existingImage" value="<%- JSON.stringify(editMyUser.image || {}) %>">
    
                            <div class="form-group">
                              <label>Current Customer Image</label>
                              <div>
                                <% if (editMyUser.image && editMyUser.image.data) { %>
                                  <img class="imageSize"
                                    src="data:<%= editMyUser.image.contentType %>;base64,<%= editMyUser.image.data.toString('base64') %>"
                                    alt="User Image">
                                  <% } else { %>
                                    No image to display
                                    <% } %>
                              </div>
                            </div>
    
    
                            <button type="submit" class="btn btn-primary mr-2">Submit</button>
                            <button class="btn btn-light">Cancel</button>
                          </form>

                      </div>
                    </div>
                  </div>

         </div>
         <%- include('../partials/adminFooter'); -%>
           
     
        </div>
   
      </div>
  
    </div>


  </body>
</html>