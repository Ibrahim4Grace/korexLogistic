<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Korex Logistic Company</title>
    <!-- base:css -->
    <link rel="stylesheet" href="../font/typicons.css">
    <link rel="stylesheet" href="../vertical-layout-light/vendor.bundle.base.css">
    <link rel="stylesheet" href="../vertical-layout-light/style.css">
    <link rel="stylesheet" href="../css/vendor.bundle.base.css">

    <!-- endinject -->
    <link rel="icon" href="../img/favi.jpg">
  </head>
  <body>
    <div class="container-scroller">

      
                   <%- include ('../partials/userNavbar'); -%>
            

      <div class="container-fluid page-body-wrapper">
        <div class="theme-setting-wrapper">
          <div id="settings-trigger"><i class="typcn typcn-cog-outline"></i></div>
          <div id="theme-settings" class="settings-panel">
            <i class="settings-close typcn typcn-delete-outline"></i>
            <p class="settings-heading">SIDEBAR SKINS</p>
            <div class="sidebar-bg-options" id="sidebar-light-theme">
              <div class="img-ss rounded-circle bg-light border mr-3"></div>
              Light
            </div>
            <div class="sidebar-bg-options selected" id="sidebar-dark-theme">
              <div class="img-ss rounded-circle bg-dark border mr-3"></div>
              Dark
            </div>
            <p class="settings-heading mt-2">HEADER SKINS</p>
            <div class="color-tiles mx-0 px-4">
              <div class="tiles success"></div>
              <div class="tiles warning"></div>
              <div class="tiles danger"></div>
              <div class="tiles primary"></div>
              <div class="tiles info"></div>
              <div class="tiles dark"></div>
              <div class="tiles default border"></div>
            </div>
          </div>
        </div>
      
        <%- include ('../partials/userSidebar'); -%>            
        
        <div class="main-panel">
          <div class="content-wrapper">
              
                <%- include (`../partials/messages`); -%>


                <div class="col-lg-12 grid-margin stretch-card">
                  <div class="card">
                    <div class="card-body">
                      <h4 class="card-title"><%- user.senderName %> Shipping History</h4>
                      
                      <div class="table-responsive pt-3">
                        <table class="table table-bordered">
                          <thead>
                            <tr>
                                <th>Recipient Name</th>
                                <th>Recipient Number</th>
                                <th>Recipient Address</th>
                                <th>Recipient State</th>
                                <th>Tracking Number</th>
                                <th>Shipping Fees</th>
                                <th>Shipping Details</th>
                               
                            </tr>
                          </thead>
                          <tbody>
                            <% if (myShippingHistory.length > 0) { %>
                              <% myShippingHistory.forEach(shippingHistory => { %>
                                <tr class="center">
                                  <td><%= shippingHistory.recipientName %></td>
                                  <td><%= shippingHistory.recipientNumber %></td>
                                  <td><%= shippingHistory.recipientAddress %></td>
                                  <td><%= shippingHistory.recipientState %></td>
                                  <td><%= shippingHistory.trackingID %></td>
                                  <td><%= shippingHistory.shippingAmount %></td>
                                  
                                  <td data-label="Profile">
                                    <a href="/users/viewUserLabel/<%- shippingHistory._id %>">
                                        View
                                    </a>
                                </td>
                                </tr>
                              <% }); %>
                            <% } else { %>
                              <tr>
                                <td colspan="6"><%= user.senderName %>  is yet to have shipping Record with us</td>
                              </tr>
                            <% } %>
                          </tbody>
                        </table>
                        <div class="pagination">
                          <% for (let i=1; i <=totalPages; i++) { %>
                              <a href="/users/shippingHistory?page=<%= i %>"
                                  class="<%= currentPage === i ? 'active' : '' %>">
                                  <%= i %>
                              </a>
                              <% } %>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              

        
         </div>
   
         <%- include('../partials/userFooter'); -%>
         
       
        </div>
    
      </div>
  
    </div>
 


  </body>
</html>