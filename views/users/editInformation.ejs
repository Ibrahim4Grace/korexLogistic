<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Korex Logistic Company</title>
    <!-- base:css -->
    <link rel="stylesheet" href="../font/typicons.css">
    <link rel="stylesheet" href="../vertical-layout-light/vendor.bundle.base.css">
    <link rel="stylesheet" href="../vertical-layout-light/style.css">
    <link rel="stylesheet" href="../css/vendor.bundle.base.css">

    <!-- endinject -->
    <link rel="icon" href="../img/favi.jpg">
  </head>
  <body>
    <div class="container-scroller">

      
                   <%- include ('../partials/userNavbar'); -%>
            

      <div class="container-fluid page-body-wrapper">
        <div class="theme-setting-wrapper">
          <div id="settings-trigger"><i class="typcn typcn-cog-outline"></i></div>
          <div id="theme-settings" class="settings-panel">
            <i class="settings-close typcn typcn-delete-outline"></i>
            <p class="settings-heading">SIDEBAR SKINS</p>
            <div class="sidebar-bg-options" id="sidebar-light-theme">
              <div class="img-ss rounded-circle bg-light border mr-3"></div>
              Light
            </div>
            <div class="sidebar-bg-options selected" id="sidebar-dark-theme">
              <div class="img-ss rounded-circle bg-dark border mr-3"></div>
              Dark
            </div>
            <p class="settings-heading mt-2">HEADER SKINS</p>
            <div class="color-tiles mx-0 px-4">
              <div class="tiles success"></div>
              <div class="tiles warning"></div>
              <div class="tiles danger"></div>
              <div class="tiles primary"></div>
              <div class="tiles info"></div>
              <div class="tiles dark"></div>
              <div class="tiles default border"></div>
            </div>
          </div>
        </div>
      
        <%- include ('../partials/userSidebar'); -%>            
        
        <div class="main-panel">
          <div class="content-wrapper">
              
            
                <%- include (`../partials/messages`); -%>

                <div class="col-12 grid-margin stretch-card">
                    <div class="card">
                         <div class="card-body">
                           <h4 class="card-title"><%- user.senderName %> Form</h4>
                           <p class="card-description">
                              Edit User Information
                           </p>
                            <form class="forms-sample" action="/users/editUserInfoPost/<%- user._id %>" method="post" enctype="multipart/form-data">

                                <div class="form-group">
                                    <label class="fieldlabels">Name</label>
                                       <input type="text" class="form-control"  name="senderName"
                                       value="<%- user.senderName %>"/>
                                </div>

                                <div class="form-group">
                                 
                                  <label class="fieldlabels">Gender</label> 
                                  <% let selectGender=["Male", "Female"] %>
                                  <select class="form-control" name="senderGender"  value="<%- user.senderGender %>">
                                    <% selectGender.forEach((senderGender)=> { %>
                                      <option value="<%- senderGender %>"<% if (user.senderGender === senderGender) { %> selected<% } %>><%- senderGender %></option>
               
                                      <% }) %>
                                  </select>
                                </div>

                                <div class="form-group">
                                   <label class="fieldlabels">Date Of Birth</label>
                                   <input type="date" class="form-control"  name="senderDob" 
                                   value="<%- user.senderDob %>"/>
                                </div>

                                <div class="form-group">
                                  <label class="fieldlabels">Contact No.</label>
                                    <input type="text" class="form-control" name="senderNumber" 
                                    value="<%- user.senderNumber %>" />

                                </div>

                                <div class="form-group">
                                    <label class="fieldlabels">Email Address</label>
                                      <input type="email" class="form-control"  name="senderEmail"
                                      value="<%- user.senderEmail %>" />
                                </div>

                                <div class="form-group">
                                  <label class="fieldlabels">Username</label>
                                   <input type="text" class="form-control"  name="username"
                                   value="<%- user.username %>" />
                                </div>

                                <div class="form-group">
                                  <label class="fieldlabels">Password</label>
                                    <input type="password" class="form-control"  name="password"
                                    value="<%- user.password %>" />
                                </div>

                                <div class="form-group">
                                    <label class="fieldlabels">Home Address</label>
                                      <input type="text" class="form-control"  name="senderAddress"
                                      value="<%- user.senderAddress %>" />
                                </div>

                                <div class="form-group">
                                    <label class="fieldlabels">City</label>
                                      <input type="text" class="form-control"  name="senderCity"
                                      value="<%- user.senderCity %>" />
                                </div>

                                <div class="form-group">
                                    <label for="exampleInputCity1">State</label>
                                      <input type="text" class="form-control" name="senderState"
                                      value="<%- user.senderState %>" />
                                </div>

                                <div class="form-group">
                                    <label for="exampleInputCity1">Upload User Image</label>
                                    <input type="file" class="form-control"  name="image" accept="image/*"/>
                                </div>
                                <input type="hidden" name="existingImage" value="<%- JSON.stringify(user.image || {}) %>">

                                <div class="form-group">
                                    <label>Current User Image</label>
                                    <div>
                                        <% if (user.image && user.image.data) { %>
                                            <img class="editImage" src="data:<%= user.image.contentType %>;base64,<%= user.image.data.toString('base64') %>" alt="User Image">
                                        <% } else { %>
                                            No image to display
                                        <% } %>
                                    </div>
                                </div>
                             
                             <button type="submit" class="btn btn-primary mr-2">Submit</button>
                             <button class="btn btn-light">Cancel</button>
                           </form>
                         </div>
                    </div>
                </div>


        
         </div>
   
         <%- include('../partials/userFooter'); -%>
         
       
        </div>
    
      </div>
  
    </div>
 

  


  </body>
</html>